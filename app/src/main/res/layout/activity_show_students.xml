<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/disall"
    tools:context=".ShowStudents">

    <Button
        android:id="@+id/appdevShowBtn"
        android:layout_width="137dp"
        android:layout_height="140dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/appd"
        android:onClick="loadListAppdevView"
        android:tooltipText="Display Appdev List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

    <Button
        android:id="@+id/networksShowBtn"
        android:layout_width="137dp"
        android:layout_height="140dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/net"
        android:tooltipText="Display Networks List"
        android:onClick="loadListNetworksView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toEndOf="@+id/appdevShowBtn"
        app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

    <Button
        android:id="@+id/showFullClass"
        android:layout_width="137dp"
        android:layout_height="140dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/appicon"
        android:onClick="loadListView"
        android:tooltipText="Display All List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

    <Button
        android:id="@+id/showBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="showBack"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtAppdev"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/kidofont"
        android:gravity="center_horizontal"
        android:text="Display Appdev List"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

    <TextView
        android:id="@+id/txtAll"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:layout_marginTop="368dp"
        android:fontFamily="@font/kidofont"
        android:gravity="center_horizontal"
        android:text="Display All Learners"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

    <TextView
        android:id="@+id/txtNetworks"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/kidofont"
        android:gravity="center_horizontal"
        android:text="Display Networks List"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showBackButton" />

</androidx.constraintlayout.widget.ConstraintLayout>